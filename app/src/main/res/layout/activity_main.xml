<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/select_text" />

    <RadioGroup
        android:id="@+id/modeGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/modeSurrounding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mode_full_surrounding" />

        <RadioButton
            android:id="@+id/modeNoCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/mode_no_cancel" />

        <RadioButton
            android:id="@+id/modeNoiseCancellation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mode_noise_cancellation" />
    </RadioGroup>


</LinearLayout>